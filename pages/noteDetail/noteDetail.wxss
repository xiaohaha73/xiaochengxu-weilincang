.active {
  color: #4d8dff;
}

.show-item {
  width: 100%;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  background-color: white;
}

.show-item .header {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.show-item .header > image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.show-item .header .header-right {
  margin-left: 30rpx;
  font-size: 28rpx;
}

.show-item .header .header-right .info {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #787878;
}

.show-item .main {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.show-item .main .title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.show-item .main .blog-img {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.show-item .main .blog-img image {
  height: 300rpx;
  margin-bottom: 5rpx;
}

.show-item .main .reply-btns {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.show-item .main .reply-btns .pinlun {
  margin-left: 20rpx;
}

.show-item .main .reply-btns .icon {
  font-size: 40rpx;
}

.show-item .comment {
  width: 100%;
  margin-top: 30rpx;
}

.show-item .comment .comment-tittle {
  height: 50rpx;
  line-height: 50rpx;
  border-left: 4rpx solid #74c1de;
  margin-left: -30rpx;
  padding-left: 30rpx;
}

.show-item .comment .comment-detail {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.show-item .comment .comment-detail .comment-left {
  width: 65rpx;
  height: 65rpx;
}

.show-item .comment .comment-detail .comment-left image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.show-item .comment .comment-detail .comment-right {
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  flex: 1;
  border-bottom: 1px solid #f6f6f6;
}

.show-item .comment .comment-detail .comment-right .header {
  height: 30rpx;
  color: #787878;
}

.show-item .comment .comment-detail .comment-right .header .nick {
  font-size: 26rpx;
}

.show-item .comment .comment-detail .comment-right .header .info {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.show-item .comment .comment-detail .comment-right .comment-text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.show-item .comment .comment-detail .comment-right .comment-btns {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.show-item .comment .comment-detail .comment-right .comment-btns .icon:nth-child(2) {
  margin-left: 30rpx;
}

.show-item .comment .comment-detail .comment-right .reply-list {
  width: 100%;
  background-color: #f6f6f6;
  font-size: 28rpx;
}

.show-item .comment .comment-detail .comment-right .reply-list .reply {
  padding: 10rpx 20rpx 18rpx 10rpx;
  display: flex;
  flex-direction: column;
}

.show-item .comment .comment-detail .comment-right .reply-list .reply .reply-text {
  display: flex;
  flex-direction: row;
}

.show-item .comment .comment-detail .comment-right .reply-list .reply .reply-text .user {
  color: #74c1de;
  padding: 0 10rpx 0 10rpx;
}

.show-item .comment .comment-detail .comment-right .reply-list .reply .reply-btns {
  margin-top: 15rpx;
  display: flex;
  margin-left: 40rpx;
  flex-direction: row;
}

.show-item .comment .comment-detail .comment-right .reply-list .reply .reply-btns .icon:nth-child(2) {
  margin-left: 30rpx;
}

.comment-input {
  background-color: white;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  right: 0;
}

.comment-input input {
  height: 56rpx;
  background-color: #f6f6f6;
  flex: 1;
  margin-right: 20rpx;
  padding-left: 20rpx;
}
