.container {
  justify-content: flex-start;
  height: 100%;
}

.form-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

.form-box textarea {
  background-color: white;
  margin: 0 auto;
  padding: 20rpx;
  color: #8080a1;
}

.form-box .wordCount {
  position: absolute;
  bottom: 20rpx;
  right: 100rpx;
  color: #808080;
  font-size: 26rpx;
}

.img-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 26rpx 59rpx;
  box-sizing: border-box;
  width: 100%;
}

.img-box .img-item {
  height: 172rpx;
  width: 172rpx;
  margin-right: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.img-box .img-item image {
  width: 100%;
  height: 100%;
}

.img-box .img-item text {
  position: absolute;
  top: -21rpx;
  right: -15rpx;
  color: #fa6a44;
  font-size: 36rpx;
}

.img-box .upload-btn {
  box-sizing: border-box;
  background-color: #f8f8f8;
  border: 2rpx solid #d9d9d9;
  color: #d9d9d9;
  font-size: 185rpx;
  line-height: 145rpx;
  text-align: center;
}
