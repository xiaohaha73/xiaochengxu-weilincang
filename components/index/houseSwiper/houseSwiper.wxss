.rent-house {
  width: 100%;
  background-color: white;
  border-top: 18rpx solid #f6f6f6;
  padding-bottom: 20rpx;
}

.rent-house .rent-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 0 30rpx;
  font-weight: bold;
}

.rent-house .rent-title .more {
  font-weight: normal;
  color: #a2a2a2;
  font-size: 26rpx;
}

.rent-house scroll-view {
  height: 417rpx;
  width: 100%;
  white-space: nowrap;
}

.rent-house scroll-view .scroll-item {
  display: inline-block;
  width: 310rpx;
  height: 370rpx;
  margin: 30rpx 18rpx 0 15rpx;
  border-radius: 14rpx;
  overflow: hidden;
  box-shadow: 2rpx 1rpx 8rpx #e0e0e0;
  position: relative;
}

.rent-house scroll-view .scroll-item .item-img {
  width: 100%;
  height: 236rpx;
}

.rent-house scroll-view .scroll-item .tag {
  position: absolute;
  top: 0;
  left: 40rpx;
  height: 45rpx;
  width: 30rpx;
}

.rent-house scroll-view .scroll-item .desc {
  height: 154rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 18rpx;
}

.rent-house scroll-view .scroll-item .desc .title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-weight: bold;
  text-align: left;
}

.rent-house scroll-view .scroll-item .desc .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #a9a9a9;
  font-size: 24rpx;
  margin-top: 11rpx;
}

.rent-house scroll-view .scroll-item .desc .bottom text {
  font-size: 32rpx;
  color: #fe660b;
  font-weight: bold;
}
