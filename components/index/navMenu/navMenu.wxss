.nav-menu {
  width: 100%;
  height: 139rpx;
  border-top: 18rpx solid #f6f6f6;
  padding: 20rpx 0 20rpx 0;
  background-color: white;
}

.nav-menu swiper-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.nav-menu swiper-item .menu-item {
  box-sizing: border-box;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.nav-menu swiper-item .menu-item image {
  height: 85rpx;
  width: 85rpx;
  margin-bottom: 10rpx;
}
