.notes {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  border-top: 18rpx solid #f6f6f6;
  background-color: white;
  align-items: center;
}

.notes image {
  width: 67rpx;
  height: 40rpx;
}

.notes .note-msg {
  margin-left: 30rpx;
  flex: 1;
  height: 40rpx;
}

.notes .note-msg swiper-item {
  text-align: right;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
}

.notes .note-msg swiper-item .content {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  flex: 1;
  text-align: left;
}

.notes .note-msg swiper-item .time {
  width: 132rpx;
  text-align: center;
  color: #9e9e9e;
}
